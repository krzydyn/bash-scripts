DIR1=$1
DIR2=$2
find $DIR1 -name "*"|while read src; do
    dst=`echo $src|sed "s#$DIR1#$DIR2#"`
    if [ ! -e $dst ]; then
        echo "$dst not exists"
    elif [ -f $src ]; then
if false; then
        lsrc=`wc -c $src|awk '{print $1}'`
        ldst=`wc -c $dst|awk '{print $1}'`
        if [ "$lsrc" != "$lsrc" ]; then
            echo "$dst differs in length $lsrc $ldst"
        else
            #echo "$dst is same $lsrc $ldst"
            :
        fi
fi
        diff $src $dst
    fi
done
