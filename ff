#!/bin/bash

. ~/bin/.functions.inc

if [ ! "$BASH_VERSION" ] ; then
    echo "Please do not use sh to run this script ($0), just execute it directly" 1>&2
    exit 1
fi

#find "${2:-.}" -name "${3:-*.[ch]pp}" -exec grep -H "$1" {} \;

OPTS=("-Rn" "--color")
OPTS+=("--exclude-dir" ".*")
OPTS+=("--exclude-dir" "GBS-ROOT")
OPTS+=("--exclude-dir" "build-*")

inc=false
while [ $# -gt 0 ]; do
    a="$1"; shift
	#echo "arg $a $1"
	case "$a" in
	-*)
		if [ "$a" = "-i" ]; then
        	OPTS+=("$a")
            continue
		fi
		if [ "$a" = "-a" ]; then
            inc=true
            continue
        fi
		if [ "$a" = "-mk" ]; then
			OPTS+=("--include" "*.mk" "--include" "[Mm]akefile")
			inc=true;
            continue
		fi
		if [ "$a" = "-cm" ]; then
			OPTS+=("--include" "*.cmake" "--include" "*.cmake.in" "--include" "CMakeLists.txt")
			inc=true;
            continue
		fi
		c=""
		if [ "$a" = "-in" ]; then a="--include"; fi
		if [ "$a" = "-inh" ]; then
			OPTS+=("--include" "*.[hH]")
			OPTS+=("--include" "*.[hH]pp")
			inc=true; a=
		fi
		if [ "$a" = "-ex" ]; then a="--exclude"; fi
		if [ "$a" = "-exd" ]; then a="--exclude-dir"; inc=true; fi
        OPTS+=("$a")
		if [ "$a" = "--include" ]; then inc=true; fi
		if [ "$a" = "--exclude" ]; then inc=true; fi
		;;
	*)
		OPTS+=("$a")
		;;
	esac
done

if ! $inc; then
	OPTS+=("--include" "*.java")
	OPTS+=("--include" "*.[ch]pp")
	OPTS+=("--include" "*.cc")
	OPTS+=("--include" "*.hh")
	OPTS+=("--include" "*.[cChH]")
	OPTS+=("--include" "*.[sS]")
	OPTS+=("--include" "*.[cj]s")
	OPTS+=("--include" "*.php")
fi
showargs egrep "${OPTS[@]}" >&2
egrep "${OPTS[@]}"
